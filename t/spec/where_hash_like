# scalar
WHERE %w
{ where => { id => { LIKE => 'foo%' } } }
WHERE (`id` LIKE ?)
[qw/foo%/]

# -like
WHERE %w
{ where => { id => { -like => 'foo%' } } }
WHERE (`id` LIKE ?)
[qw/foo%/]

# scalar ref
WHERE %w
{ where => { id => { LIKE => \'"foo%"' } } }
WHERE (`id` LIKE "foo%")
[]

# array
WHERE %w
{ where => { id => { LIKE => ['%foo', \'"bar%"'] } } }
WHERE (`id` LIKE ? OR `id` LIKE "bar%")
[qw/%foo/]
