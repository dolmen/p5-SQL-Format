# scalar
SELECT %c FROM table
{ columns => 'foo' }
SELECT `foo` FROM table
[]

# array
SELECT %c FROM table
{ columns => [qw/foo bar/] }
SELECT `foo`, `bar` FROM table
[]

# empty array
SELECT %c FROM table
{ columns => [] }
SELECT * FROM table
[]

# undef
SELECT %c FROM table
{ columns => undef }
SELECT * FROM table
[]

# '*'
SELECT %c FROM table
{ columns => '*' }
SELECT * FROM table
[]

# scalar ref
SELECT %c FROM table
{ columns => \'foo AS bar' }
SELECT foo AS bar FROM table
[]

# scalar ref in array
SELECT %c FROM table
{ columns => [\'foo AS bar', 'baz'] }
SELECT foo AS bar, `baz` FROM table
[]
